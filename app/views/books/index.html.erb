
<!--投稿機能-->
<%= form_with model: @book do |f| %>

    <div class="field">
        <label for = "book_title">Title</label><br>
        <%= f.text_field :title %>
    </div>

    <div class="field">
        <label for="book_body">Opinion</label><br>
        <%= f.text_area :body %>
    </div>

    <div class="actions">
        <%= f.submit 'Create Book' %>
    </div>

<% end %>
