<!--books/index-->
<h1>User info</h1>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "ここにプロフィール編集のボタンがくる", edit_user_path(@user) %></p>
  <% end %>
</div>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4><br>
      <%= f.text_field :title %>

    <h4>Opinion</h4><br>
      <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

<h1>Books</h1>
<p>Title</p>
<p>Opinion</p>

<% @books.each do |book| %>
<div>
  <p><%= link_to book.title ,book_path(book.id) %></p>
  <p><%= book.body %></p>
</div>
<% end %>