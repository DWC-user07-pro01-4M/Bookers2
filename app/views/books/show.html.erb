<!--books/show-->
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3><%= @user.name %></h3>
  <h3><%= @user.introduction %></h3>
  <% if @user == current_user %>
    <p><%= link_to "ここにプロフィール編集のボタンがくる", edit_user_path(@user) %></p>
  <% end %>
</div>

<%= form_with model: @book_new do |f| %>

    <h4>Title</h4><br>
      <%= f.text_field :title %>

    <h4>Opinion</h4><br>
      <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

<h1>Book detail</h1>
<div>
  <p><%= Book.find(params[:id]).title %></p>
