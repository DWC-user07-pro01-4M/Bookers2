<h1>Book detail</h1>

<div>
  <p><%= Book.find(params[:id]).title %></p>
  <p><%= Book.find(params[:id]).body %></p>
   <p>
     <%= link_to "Edit", edit_book_path %>
     <%= link_to "Destroy",books_path %>
   </p>

</div>

<%= form_with model: @book do |f| %>

    <h4>Title</h4><br>
      <%= f.text_field :title %>

    <h4>Opinion</h4><br>
      <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>