<!--users/edit-->
<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-xm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <%= form_with model: @user do |f| %>
            <div class="fom-group">
              <label for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, id:"inputName" , class: "form-control name" %>
            </div>
            <div class="fom-group">
              <label for="inputImage">Image</label>
              <%= f.file_field :profile_image,  accept: "image/*" , class: "form-control-file user_image" %>
            </div>
            <div class="fom-group">
              <label for="inputName">Introduction</label>
              <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" , class: "form-control introduction" %><br>
            </div>
            <div class="fom-group">
              <%= f.submit "Update User" , class: "btn btn-secondary"%>
            </div>
          <% end %>
      </div>
    </div>
  </div>