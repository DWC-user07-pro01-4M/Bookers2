<!--users/edit-->
<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-xm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
          <%= form_with model: @user do |f| %>

            <div class="fom-group">
              <label for="inputName">Name</label>
              <%= f.text_field :name, autofocus: true, id:"inputName" %>
            </div>

            <div class="fom-group">
              <label for="inputImage">Image</label>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            </div>

            <div class="fom-group">
              <label for="inputName">Introduction</label>
              <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
            </div>

            <div class="fom-group">
              <%= f.submit "Update User" %>
            </div>

          <% end %>
      </div>
    </div>
  </div>